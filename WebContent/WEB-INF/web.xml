<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <display-name>GarageMonkey</display-name>
    <description>
        A web application for automating garage operations
    </description>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.SearchParkingSpotServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.AboutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.ContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GarageAdminServlet</servlet-name>
        <servlet-class>edu.asu.garagemonkey.servlet.GarageAdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GarageAdminServlet</servlet-name>
        <url-pattern>/manage-garage</url-pattern>
    </servlet-mapping>

</web-app>
